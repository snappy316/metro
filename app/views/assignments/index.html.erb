<p id="notice"><%= notice %></p>

<h1>Listing Assignments</h1>

<table>
  <thead>
    <tr>
      <th>Driver</th>
      <th>Coach</th>
      <th>Route</th>
      <th>Start time</th>
      <th>End time</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @assignments.each do |assignment| %>
      <tr id="<%= assignment.id %>">
        <td><%= assignment.driver.name %></td>
        <td><%= assignment.coach.id %></td>
        <td><%= assignment.route %></td>
        <td><%= assignment.start_time %></td>
        <td><%= assignment.end_time %></td>
        <td><%= link_to 'Show', assignment %></td>
        <td><%= link_to 'Edit', edit_assignment_path(assignment) %></td>
        <td><%= link_to 'Destroy', assignment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

